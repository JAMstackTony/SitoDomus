<!DOCTYPE html>
<html lang="cs">
<head>
  <meta charset="UTF-8">
  <title>Detail inzerátu</title>
  <link rel="stylesheet" href="/styles/anunci.css">
</head>
<body>

<section class="property-page">
  <!-- КАРУСЕЛЬ ИЗОБРАЖЕНИЙ -->
  <div class="carousel-container">
    <div class="carousel-images" id="carouselImages">
      <!-- Изображения будут добавлены динамически -->
    </div>
    <button class="carousel-btn prev">
      <svg width="32" height="32" viewBox="0 0 63 63" fill="none" xmlns="http://www.w3.org/2000/svg">
        <path d="M30.0234 49.2188L12.3047 31.5L30.0234 13.7813M14.7656 31.5L50.6953 31.5" stroke="#CEE0FF" stroke-width="6" stroke-miterlimit="10" stroke-linecap="square"/>
      </svg>
    </button>
    <button class="carousel-btn next">
      <svg width="32" height="32" viewBox="0 0 63 63" fill="none" xmlns="http://www.w3.org/2000/svg">
        <path d="M32.9766 13.7812L50.6953 31.5L32.9766 49.2188M48.2344 31.5H12.3047" stroke="#CEE0FF" stroke-width="6" stroke-miterlimit="10" stroke-linecap="square"/>
      </svg>
    </button>
  </div>

  <!-- СИНИЙ БЛОК С ИНФОРМАЦИЕЙ -->
  <div class="blue-block">
    <div class="blue-block-content">
      <div class="return">
        <a href="/property/" class="back-button">
          <svg width="32" height="32" viewBox="0 0 63 63" fill="none" xmlns="http://www.w3.org/2000/svg">
            <path d="M30.0234 49.2188L12.3047 31.5L30.0234 13.7813M14.7656 31.5L50.6953 31.5" stroke="#CEE0FF" stroke-width="6" stroke-miterlimit="10" stroke-linecap="square"/>
          </svg>
        </a>
        <div class="price" id="upPrezzo"></div>
        <div class="details">
          <span id="upNomeAnunci"></span>
          <span id="upVia"></span>
          <span id="upZonaM2"></span>
        </div>
      </div>
      <div class="cta">
        <a href="tel:+420604173506" class="glass-link">
          <button class="glass-button" data-i18n="anunci/but">Napsat prodejci</button>
        </a>
        <div class="contact">
          <a href="https://api.whatsapp.com/send?phone=420604173506">
            <img src="/foto/icon/whats.svg" alt="WhatsApp">
          </a>
        </div>
      </div>
    </div>
  </div>

  <!-- ОСНОВНАЯ ИНФОРМАЦИЯ -->
  <div class="section-info">
    <div class="info-prev">
      <span id="upNomeAnunciSmall"></span>
      <span id="upViaSmall"></span>
    </div>
    <div class="sec-info1">
      <span id="textInfo"></span>
    </div>
    <div class="sec-info2">
      <h1 data-i18n="anunci/h1">Hlavní charakteristiky</h1>
      <span id="textInfoBlock"></span>
    </div>
    <div class="sec-info3">
      <span id="textInfo1"></span>
    </div>
    <div class="sec-info3">
      <span id="textInfo2"></span>
    </div>
    <div class="sec-info3">
      <span id="textInfo3"></span>
    </div>
    <div class="sec-info3">
      <span id="textInfo4"></span>
    </div>
    <div class="sec-info3">
      <span id="textInfo5"></span>
    </div>
  </div>

  <!-- ПОХОЖИЕ ОБЪЯВЛЕНИЯ -->
  <div class="section-offer">
    <h1 data-i18n="random/h1">Podobné nabídky</h1>
    <div class="random-block" id="randomOffers">
      <!-- Здесь будут случайные объявления -->
    </div>
  </div>

</section>

<script type="module" src="/script/anunci.js"></script>
</body>
</html>